{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "newLine": "LF",
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmitOnError": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "./dist/"
  ]
}
